<!-- Load Header -->
<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>

    <main class="container" 
        <!-- Make a confirmation form to delete a category -->
        <h1 class="text-center">Eliminar Categoria</h1>
        <!-- If error, show a message -->
        <% if (hasMessages) { %>
            <section class="messages">
              <% messages.forEach(function(message) { %>
                <% if (message.type==='error' ) { %>
                  <div class="alert alert-danger" role="alert">
                    <%= message.message %>
                  </div>
                  <% } else if (message.type==='success' ) { %>
                    <div class="alert alert-success" role="alert">
                      <%= message.message %>
                    </div>
                    <% } %>
                      <% }) %>
            </section>
            <% } else %>
        <form action="/intranet/category/delete/<%= info.id %>" enctype="multipart/form-data" method="POST">
            <!-- Make a text explaining the action -->
            <p class="text-center">¿Está seguro que desea eliminar la categoria <strong><%= info.name %></strong>?</p>
            <p class="text-center"><strong>Esta acción no se puede deshacer.</strong></p>
            <!-- Confirmation checkbox -->
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="confirmation" name="confirmation" required>
                <label class="form-check-label" for="confirmation">Confirmo que soy el administrador de la cuenta y que deseo eliminar la categoria <strong><%= info.name %></strong>.</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Eliminar</button>
            </div>
        </form>
        <% } %>
    </main>

    <%- include('../partials/footer') %>